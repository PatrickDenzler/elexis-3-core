	<changeSet author="thomas" id="manual_update_CH_ELEXIS_ARZTTARIFE_CH_PANDEMIC_fixlinebreak">
		<preConditions onFail="MARK_RAN">
			<tableExists tableName="CH_ELEXIS_ARZTTARIFE_CH_PANDEMIC" />
		</preConditions>
		<sql>
<![CDATA[
UPDATE CH_ELEXIS_ARZTTARIFE_CH_PANDEMIC SET TITLE = TRIM('\n' FROM TITLE);
UPDATE CH_ELEXIS_ARZTTARIFE_CH_PANDEMIC SET TITLE = TRIM('\r' FROM TITLE);
]]>
	    </sql>
	</changeSet>
